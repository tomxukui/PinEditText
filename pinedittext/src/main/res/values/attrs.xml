<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PinEditText">
        <attr name="pet_animation_type" format="enum">
            <enum name="pop_in" value="0" />
            <enum name="from_bottom" value="1" />
            <enum name="none" value="-1" />
        </attr>
        <attr name="pet_pin_mask" format="string" />
        <attr name="pet_pin_hint" format="string" />
        <attr name="pet_pin_background_drawable" format="reference" />


        <attr name="pin_line_stroke" format="dimension" />
        <attr name="pin_line_stroke_selected" format="dimension" />
        <attr name="pin_character_spacing" format="dimension" />
        <attr name="pin_text_bottom_padding" format="dimension" />
        <attr name="pin_line_colors" format="color" />
    </declare-styleable>

</resources>